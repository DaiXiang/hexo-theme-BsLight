<article class="<%= item.layout %>">
  <% if (item.photos && item.photos.length){ %>
    <%- partial('post/gallery') %>
  <% } %>
  <div class="post-content">
    <header>
      <% if (item.comment){ %>
        <div class="alignright">
          <a href="<%- item.permalink %>#disqus_thread" class="comment-link"></a>
        </div>
      <% } %>
      <% if (item.layout != 'page'){ %>
        <div class="icon"></div>
        <time datetime="<%= item.date.toDate().toISOString() %>"><a href="<%- config.root %><%- item.path %>"><%= item.date.format(config.date_format) %></a></time>
      <% } %>
      <%- partial('post/title') %>
      
    </header>
    <div class="entry">
      <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
      <% } else { %>
        <% if (!index){ %>
          <%- partial('toc') %>
        <% } %>
        <%- item.content %>
      <% } %>
    </div>
    <footer>
      <%- partial('post/category') %>
      <%- partial('post/tag') %>
      <% if (index){ %>
        <% if (item.excerpt){ %>
          <div class="alignright">
            <a href="<%- config.root %><%- item.path %>" class="more-link"><%= theme.excerpt_link %></a>
          </div>
        <% } else { %>
          <%- partial('post/share_new') %>
        <% } %>
      <% } else { %>
        <%- partial('post/share_new') %>
      <% } %>
      <div class="clearfix"></div>
    </footer>
  </div>
</article>

<%- partial('comment') %>
<% if(!index && item.toc){ %>
  <%- partial('toc_action') %>
<% } %>