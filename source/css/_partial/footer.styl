#footer
  color color-meta
  margin-bottom 36px
  font 0.9em/1.6 font-title
  text-shadow 0 0 1px #fff
  text-align center

#foot-nav
  ul
    list-style none
    li
      display inline
      margin-right 48px
      &:last-of-type
        margin-right 0px

.footer-btn
  position fixed
  right 36px
  cursor pointer
  @media screen and (max-width: 600px)
    right 15px
  a
    font-family 'FontAwesome'
    font-size 3.5em
    @media screen and (max-width: 900px)
      font-size 3em
    @media screen and (max-width: 600px)
      font-size 2.5em
    color color-font
    &:hover
      text-decoration none
.to-top
  a:before
    content '\f139'
.quick-nav-open
  a:before
    content '\f055'
.quick-nav-close
  a:before
    content '\f056'

.social
  li
    a
      -webkit-border-radius 50%
      -moz-border-radius 50%
      -ms-border-radius 50%
      -o-border-radius 50%
      border-radius 50%
      display -moz-inline-stack
      display inline-block
      vertical-align middle
      zoom 1
      text-indent -9999px
      margin 0 15px 15px 0
      opacity 0.5
      width 28px
      height 28px
      -webkit-transition 0.3s
      -moz-transition 0.3s
      -o-transition 0.3s
      transition 0.3s
      &:hover
        opacity 1
      &:last-of-type
        margin-right 0px

