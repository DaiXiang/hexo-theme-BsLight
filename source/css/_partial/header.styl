#header
  margin-bottom 30px

  #nav-top
    background #363636
    text-shadow 0 0 1px #fff
    padding-top 8px
    padding-bottom 5px
    position fixed
    top 0
    right 0
    left 0
    z-index 1030
    transform translate3d(0,0,0)
    @media screen and (max-width: 600px)
      text-align center

    a
      color #fff
      &:hover
        color color-link
        text-decoration none
      
    h1
      color #fff
      font-weight normal
      font-size 2.5em
      line-height 1

    h2
      font-weight normal
      font-size 0.9em
      line-height 1
      margin-top 10px

    .main-title
      margin-left 25px
      @media screen and (max-width: 600px)
        margin auto
        float none
        text-align center
    
    #main-nav
      font-family font-title
      line-height 2.5em
      margin-right 25px
      @media screen and (max-width: 600px)
        margin auto
        float none
      ul
        list-style none
        li
          float left
          margin-left 30px
          @media screen and (max-width: 600px)
            margin-left 15px
            margin-right 15px
            float none
            display inline