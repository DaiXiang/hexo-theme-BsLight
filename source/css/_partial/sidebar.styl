#sidebar
  width 270px
  line-height 1.8em
  @media screen and (max-width: 900px)
    float none
    width 100%
  .widget
    background #fff
    box-shadow 1px 2px 3px #ddd
    word-wrap break-word
    margin-bottom 30px
    .title
      background #363636
      color #fff
      padding 15px 20px
      font-size 1em
      border-bottom 1px solid color-border
      font-weight normal

    .entry
      background color-background
      font-size 0.9em
      padding 10px 10px

    ul, ol, dl
      list-style none
      ul, ol, dl
        list-style disc
        margin-left 20px

  .search
    margin-bottom 30px
    input
      background #fff
      font-family font-title
      font-style italic
      font-size 1em
      padding 10px 15px
      border 1px solid #363636
      box-shadow 1px 2px 3px #ddd
      width 100%
      box-sizing border-box
      color color-meta
      &:focus
        color color-font
    #st-results-container
      background #fff
      width 100%
      box-sizing border-box
      box-shadow 1px 2px 3px #ddd

  .tag
    small
      margin-left 5px
      color #fff
      display inline-block
      min-width 10px
      padding 3px 7px
      font-size 12px
      font-weight 700
      line-height 1
      text-align center
      white-space nowrap
      vertical-align baseline
      background-color color-link
      border-radius 10px

    span
      color #A0C5E8
      background #fff
      margin-right 5px
      border 1px solid #A0C5E8
      margin-bottom 5px
      display inline-block
      border-radius .75em
      &:hover
        background #eee
      a
        padding .3em .6em .4em
        &:hover
          border-color color-border
          text-decoration none

  .twitter
    li
      border-bottom 1px solid color-border
      padding 15px 20px
      font-size 0.9em
      &:last-of-type
        border-bottom none
    small
      display block
      margin-top 10px
      color color-meta
      line-height 1

  .tagcloud
    .entry
      padding-right 5px
    a
      margin-right 10px
      display inline-block